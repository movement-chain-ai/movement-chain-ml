#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Validating commit message format..."

npx --no-install commitlint --edit "$1"

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ Commit message validation failed!"
  echo ""
  echo "ğŸ“ Please use Conventional Commits format:"
  echo "   <type>(<scope>): <subject>"
  echo ""
  echo "   Examples:"
  echo "   feat: add new model training pipeline"
  echo "   fix: resolve data preprocessing issue"
  echo "   docs: update README with setup instructions"
  echo "   test: add unit tests for feature extraction"
  echo ""
  echo "   Valid types: feat, fix, docs, chore, refactor, test, perf, ci"
  echo ""
  exit 1
fi

echo "âœ… Commit message validated"
