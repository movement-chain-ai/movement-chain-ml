#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running pre-commit checks for ML project..."
echo ""

# Run lint-staged for Python files
echo "üìù Running linters and formatters..."
npx lint-staged

if [ $? -ne 0 ]; then
  echo "‚ùå Linting failed. Please fix the issues and try again."
  exit 1
fi

# Strip notebook outputs
if command -v nbstripout > /dev/null; then
  echo ""
  echo "üìì Stripping notebook outputs..."
  find notebooks -name "*.ipynb" -exec nbstripout {} \; 2>/dev/null || true
else
  echo "‚ö†Ô∏è  nbstripout not installed, skipping notebook stripping"
  echo "   Install with: pip install nbstripout"
fi

echo ""
echo "‚úÖ Pre-commit checks completed successfully!"
